{
  "name": "fin-catch-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:tauri": "turbo run dev --filter=@repo/tauri",
    "dev:web": "turbo run dev --filter=@repo/web",
    "build": "turbo run build",
    "build:tauri": "turbo run build --filter=@repo/tauri",
    "build:web": "turbo run build --filter=@repo/web",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "turbo": "^2.5.4",
    "prettier": "^3.2.5"
  },
  "packageManager": "pnpm@9.1.0"
}
